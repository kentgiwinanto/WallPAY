<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Fund"
        android:textSize="21dp"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive Rp "
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/view1"
            android:layout_marginLeft="60dp"
            />


        <!-- Receive Button -->
        <TextView
            android:id="@+id/tvReceivedAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/view1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From "
            android:gravity="left"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="60dp"
            android:id="@+id/view2"
            />



        <!-- Receive Button -->
        <TextView
            android:id="@+id/txtSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/view2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        >

        <!-- Send Button -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passkey "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:id="@+id/txPass"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/etPasskey"
            android:inputType="textPassword"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:gravity="left"
            android:layout_toRightOf="@+id/txPass"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/linkNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:text="No"
            android:layout_marginRight="110dp"
            android:gravity="right"/>

        <TextView
            android:id="@+id/linkYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginRight="35dp"
            android:text="Yes"
            android:gravity="right"/>

    </RelativeLayout>

</LinearLayout>